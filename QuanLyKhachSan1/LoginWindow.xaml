<Window x:Class="QuanLyKhachSan1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0" ResizeMode="NoResize">

    <Grid Margin="20">
        <!-- Tiêu đề Đăng Nhập -->
        <TextBlock Text="Đăng Nhập" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-13,0,226" />

        <!-- Form Đăng Nhập -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <!-- Tài khoản -->
            <TextBlock Text="Tài khoản" FontSize="14" Margin="0,10,0,5" />
            <TextBox Name="UsernameTextBox" Height="30" Padding="5" Background="White" />

            <!-- Mật khẩu -->
            <TextBlock Text="Mật khẩu" FontSize="14" Margin="0,15,0,5" />
            <PasswordBox Name="PasswordBox" Height="30" Padding="5" Background="White" />

            <!-- Checkbox Ghi nhớ tài khoản -->
            <CheckBox Content="Ghi nhớ tài khoản" Margin="0,15,0,0" FontSize="12" />

            <!-- Nút Đăng Nhập -->
            <Button Content="Đăng Nhập" Width="100" Height="35" Margin="0,20,0,0" 
                    Background="#007acc" Foreground="White" 
                    HorizontalAlignment="Center" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
